@using Dealership.Models;

<h1>Used Car List</h1>

@if (Model.Count == 0)
{
  <p>There are no used cars for sale at the moment.</p>
}
<ul>
  @foreach (Car car in Model)
  {
    @* <li>@car.Details @car.MakeModel, with @car.Miles miles for $@car.Price</li> *@
    <li>@car.Details</li>
    <ul>
      <li>Car Make: @car.MakeModel</li>
      <li>Price: $@car.Price</li>
      <li>Miles: @car.Miles</li>
    </ul>
    <br>
  }

</ul>
<p><a href="/cars/new">Add another used car</a></p>
<p><a href="/">Go back to Homepage</a></p>